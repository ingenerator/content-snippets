{
  "name": "ingenerator/content-snippets",
  "type": "library",
  "description": "Entities and management interface for pre-defined editable content snippets to display in the app",
  "homepage": "http://github.com/ingenerator/content-snippets",
  "license": "BSD-3-Clause",
  "authors": [
    {
      "name": "Andrew Coulton",
      "email": "andrew@ingenerator.com",
      "homepage": "http://ingenerator.com"
    }
  ],
  "require": {
    "ezyang/htmlpurifier": "^4.6",
    "php": "^5.5||^7.2",
    "ingenerator/kohana-core": "^4.2",
    "ingenerator/kohana-extras": "^0.3.3",
    "ingenerator/kohana-view": "^4.1"
  },
  "require-dev": {
    "kohana/koharness": "*@dev",
    "phpunit/phpunit": "^4.8||^7.0",
    "johnkary/phpunit-speedtrap": "^1.0||3.0"
  },
  "repositories": [
    {
      "type": "composer",
      "url": "https://php-packages.ingenerator.com"
    }
  ],
  "autoload": {
    "psr-4": {
      "Ingenerator\\ContentSnippets\\": "src/"
    }
  },
  "config": {
    "preferred-install": "dist"
  },
  "extra": {
    "installer-paths": {
      "vendor/{$vendor}/{$name}": [
        "type:kohana-module"
      ]
    }
  }
}
